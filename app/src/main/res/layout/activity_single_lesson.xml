<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:stretchColumns="*">

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/form_infinitif_single_lesson"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/infinitive"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/infinitif_single_lesson"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/form_preterit_single_lesson"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/preterite"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/preterit_single_lesson"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/form_participe_single_lesson"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/participe"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:gravity="start"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/auxiliary_single_lesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/participe_single_lesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/form_troisieme_personne_single_lesson"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/third_person"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/troisieme_personne_single_lesson"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/form_traduction_single_lesson"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/traduction"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/traduction_single_lesson"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/stop_single_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="@string/finish" />

    <Button
        android:id="@+id/next_single_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        android:text="@string/go_on" />

</RelativeLayout>
